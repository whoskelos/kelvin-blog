---
const { pathname } = Astro.url;
const currentPath = pathname.slice(1);
---

<div class="nav-links" transition:animate="slide">
    <a href="/" class={currentPath == "" ? "active" : ""}>Home</a>
    <a href="/about" data-current={currentPath} class={currentPath == "about" ? "active" : ""}>About</a>
    <a href="/blog" data-current={currentPath} class={currentPath == "blog" ? "active" : ""}>Blog</a>
    <a href="/tags" data-current={currentPath} class={currentPath == "tags" ? "active" : ""}>Tags</a>
</div>
