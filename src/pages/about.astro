---
import { Image } from "astro:assets";

import "../styles/global.css";
import BaseLayout from "../layouts/BaseLayout.astro";

import aboutImage from "../assets/images/about.webp";

const pageTitle: string = "About Me üôãüèΩ‚Äç‚ôÇÔ∏è";

interface Iidentity {
    firstName: string;
    country: string;
    occupation: string;
    hobbies: string[];
}
const identity: Iidentity = {
    firstName: "Kelvin",
    country: "Spain",
    occupation: "Frontend Developer",
    hobbies: ["Gym", "Taste some food", "Travel."],
};

const skills: string[] = [
    "HTML",
    "CSS",
    "JavaScript",
    "React",
    "Astro",
    "Tailwind",
];

const skillColor = "#e53170";
const fontWeight = "bold";
const textCase = "uppercase";
---

<BaseLayout pageTitle={pageTitle}>
    <section class="section">
        <h2>Who am I?</h2>
        <div class="welcome-image-container">
            <Image src={aboutImage} alt="Ralph from simpsons waving" loading="lazy" />
        </div>
        <p>I'm {identity.firstName}</p>
        <p>I born in Ecuador but I live in {identity.country} since 2008</p>
        <p>
            I work as a Frontend Developer at <i>Idealista</i>.
        </p>
        <ul>
            {
                identity.hobbies.length >= 2 && (
                    <li>
                        Two of my hobbies are: {identity.hobbies[0]} and{" "}
                        {identity.hobbies[1]}
                    </li>
                )
            }
        </ul>
        <p>My skills are:</p>
        <ul>
            {skills.map((skill) => <li class="skill">{skill}</li>)}
        </ul>

        <p>I'm always try to keep up to date!</p>

    </section>
</BaseLayout>
<style define:vars={{ skillColor, fontWeight, textCase }}>
    .skill {
        color: var(--skillColor);
        font-weight: var(--fontWeight);
        text-transform: var(--textCase);
    }
</style>
